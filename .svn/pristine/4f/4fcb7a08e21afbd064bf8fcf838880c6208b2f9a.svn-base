<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="height:300px;"></div><!-- ECharts单文件引入 -->
<script type="text/javascript">
	require.config({
		paths: {
			echarts: 'http://echarts.baidu.com/build/dist'
		}
	});

	// 使用
	require(
			[
				'echarts',
				'echarts/chart/bar' // 使用柱状图就加载bar模块，按需加载
			],
			function (ec)
			{
				// 基于准备好的dom，初始化echarts图表
				var myChart = ec.init(document.getElementById('main'));

				var option = {
					title     : {
						text: '流量卡激活统计',
					},
					tooltip   : {
						trigger    : 'axis',
						axisPointer: {            // 坐标轴指示器，坐标轴触发有效
							type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
						},
						formatter  : function (params)
						{
							return params[0].name + '<br/>'
									+ params[0].seriesName + ' : ' + params[0].value + '<br/>'
									+ '总卡数 : ' + (params[1].value + params[0].value);
						}
					},
					legend    : {
						selectedMode: false,
						data        : ['未激活', '已激活']
					},
					toolbox   : {
						show   : true,
						feature: {
							mark       : {show: true},
							dataView   : {show: true, readOnly: false},
							restore    : {show: true},
							saveAsImage: {show: true}
						}
					},
					calculable: true,
					xAxis     : [
						{
							type: 'category',
							data: <?php echo $org; ?>
				}
				],
				yAxis     : [
				{
					type       : 'value',
					boundaryGap: [0, 0.1]
				}
				],
				series    : [
				{
					name          : '未激活',
					type          : 'bar',
					stack         : 'sum',
					barCategoryGap: '50%',
					itemStyle     : {
					normal: {
					color          : '#30C0FF',
					barBorderColor : '#30C0FF',
					barBorderWidth : 6,
					barBorderRadius: 0
				}
				},
					data          : <?php echo $not_activated; ?>
				},
				{
					name     : '已激活',
					type     : 'bar',
					stack    : 'sum',
					itemStyle: {
					normal: {
					color          : '#FF00FF',
					barBorderColor : '#FF00FF',
					barBorderWidth : 6,
					barBorderRadius: 0,
					label          : {
					show     : true,
					position : 'top',
					formatter: function (params)
				{
					for (var i = 0, l = option.xAxis[0].data.length; i < l; i++)
				{
					if (option.xAxis[0].data[i] == params.name)
				{
					return '未激活：' + option.series[0].data[i] + '\n已激活：' + params.value;
				}
				}
				},
					textStyle: {
					color: 'tomato'
				}
				}
				}
				},
					data     : <?php echo $activated; ?>
				}
				]
				};
				myChart.setOption(option);
	});
</script>
