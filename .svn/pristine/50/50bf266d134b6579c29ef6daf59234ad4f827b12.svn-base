<script type="text/javascript">
function enterPress()
{
	if (event.keyCode == 13)
	{
		filter();
	}
}
function filter()
{
	var url = '/gprs/pay_report?';

	var org_id = $('select[name=\'org_id\']').val();
	if (org_id != '*')
	{
		url += 'org_id=' + encodeURIComponent(org_id);
	}

	var pay_method = $('select[name=\'pay_method\']').val();
	if (pay_method != '*')
	{
		url += '&pay_method=' + encodeURIComponent(pay_method);
	}

	var filter_date_start = $('input[name=\'filter_date_start\']').val();
	if (filter_date_start)
	{
		url += '&filter_date_start=' + encodeURIComponent(filter_date_start);
	}

	var filter_date_end = $('input[name=\'filter_date_end\']').val();
	if (filter_date_end)
	{
		url += '&filter_date_end=' + encodeURIComponent(filter_date_end);
	}

	location = url;
}
$('#date-start').datepicker({
	dateFormat: 'yy-mm-dd', timeFormat: "HH:mm:ss", numberOfMonths: 1, onClose: function (sltDate)
	{
		$('#date-end').datepicker('option', 'minDate', sltDate);
	}
});

$('#date-end').datepicker({
	dateFormat: 'yy-mm-dd', timeFormat: "HH:mm:ss", numberOfMonths: 1, onClose: function (sltDate)
	{
		$('#date-start').datepicker('option', 'maxDate', sltDate);
	}
});
</script>
